<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="import_project_tasks_form" model="ir.ui.view">
        <field name="name">import.project.tasks.form.inherit</field>
        <field name="model">import.project.tasks</field>
        <field name="inherit_id" ref="project_task_import.import_project_tasks_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='tags']" position="inside">
                <field
                    name="tags_subject"
                    widget="boolean_toggle"
                    invisible="template != 'gap2'"
                />
                <field
                    name="tags_flux"
                    widget="boolean_toggle"
                    invisible="template != 'gap2'"
                />
                <field
                    name="tags_times"
                    widget="boolean_toggle"
                    invisible="template != 'gap2'"
                />
                <field
                    name="tags_implementation"
                    widget="boolean_toggle"
                    invisible="template != 'gap2'"
                />
            </xpath>
        </field>
    </record>

</odoo>
