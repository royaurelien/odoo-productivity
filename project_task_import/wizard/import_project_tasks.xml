<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="import_project_tasks_form" model="ir.ui.view">
        <field name="name">import.project.tasks.form</field>
        <field name="model">import.project.tasks</field>
        <field name="arch" type="xml">
            <form string="Import Project Tasks">
                <group name="technical" invisible="1">
                </group>
                <group name="import">
                    <field name="template" />
                    <field
                        name="import_file"
                        filename="import_filename"
                        readonly="not template"/>
                    <field name="import_filename" invisible="1" />
                </group>
                <group name="update">
                    <field
                        name="project_id"
                        required="True"
                        widget="many2one"
                        options="{'no_create': True, 'no_edit': True}"
                    />
                </group>
                <footer>
                    <button
                        name="import_button"
                        type="object"
                        class="oe_highlight"
                        string="Import"/>
                    <button special="cancel" string="Cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>
    <record id="import_project_tasks_action" model="ir.actions.act_window">
        <field name="name">Import Project Tasks</field>
        <field name="res_model">import.project.tasks</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_state': 'update'}</field>
    </record>
    <menuitem
        id="import_project_tasks_menu"
        parent="project.menu_project_config"
        action="import_project_tasks_action"
        sequence="99"
    />
</odoo>
