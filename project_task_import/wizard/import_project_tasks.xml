<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="import_project_tasks_form" model="ir.ui.view">
        <field name="name">import.project.tasks.form</field>
        <field name="model">import.project.tasks</field>
        <field name="arch" type="xml">
            <form string="Import Project Tasks">
                <field name="locked" invisible="1"/>
                <group>
                    <group name="project">
                        <field
                            name="project_id"
                            required="True"
                            readonly="locked"
                            invisible="locked"
                            widget="many2one"
                            options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                        />
                        <field name="template" />
                    </group>
                    <group name="import">
                        <field
                            name="import_file"
                            filename="import_filename"
                            readonly="not template"/>
                        <field name="import_filename" invisible="1" />
                    </group>
                </group>
                <separator string="Sheets to Import" colspan="4"/>
                <group name="sheets" invisible="not import_file">
                    <field name="sheets" readonly="1" colspan="2" nolabel="1"/>
                    <field name="sheets_to_import" string="To Import" colspan="2" nolabel="1"/>
                </group>
                <separator colspan="4"/>
                <group>
                    <group name="configuration" string="Configuration">
                        <field name="task_name" required="True"/>
                        <field
                            name="use_subtasks"
                            widget="boolean_toggle"
                        />
                        <field
                            name="parent_key"
                            required="use_subtasks"
                            invisible="not use_subtasks"
                        />
                    </group>
                    <group name="tags" string="Tags">
                    </group>
                </group>
                <footer>
                    <button
                        name="import_button"
                        type="object"
                        class="oe_highlight"
                        string="Import"/>
                    <button special="cancel" string="Cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>

    <record id="import_project_tasks_action" model="ir.actions.act_window">
        <field name="name">Import Tasks</field>
        <field name="res_model">import.project.tasks</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_state': 'update'}</field>
    </record>

    <menuitem
        id="import_project_tasks_menu"
        parent="project.menu_project_config"
        action="import_project_tasks_action"
        sequence="99"
    />
</odoo>
